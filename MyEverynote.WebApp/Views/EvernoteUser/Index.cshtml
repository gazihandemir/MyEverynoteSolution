@model IEnumerable<MyEvernote.Entities.EvernoteUser>

@{
    ViewBag.Title = "Kullanıcılar";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="row pl-5 pt-3 mr-0">
    <div class="col-md-12">
        <p class="display-4 border-bottom">
            @ViewBag.Title
        </p>
    </div>
</div>

<div class="row pl-5 mr-0">
    <div class="col-md-12">
        <p>
            @Bootstrap.LinkButton("/EvernoteUser/Create", "primary", "btn-sm", string.Empty, "plus", "Yeni Kullanıcı Ekle")
        </p>
        <table class="table table-hover table-striped table-sm small">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActivateGuid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUserName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>

                    <td class="text-center">
                        @if (item.IsActive)
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @*@Html.DisplayFor(modelItem => item.IsActive)*@
                    </td>
                    <td class="text-center">
                        @if (item.IsAdmin)
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @* @Html.DisplayFor(modelItem => item.IsAdmin)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivateGuid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUserName)
                    </td>
                    <td width="150" class="text-right">
                        @Bootstrap.LinkButton("/EvernoteUser/Edit/" + item.Id, "warning", "btn-sm", "Edit", "edit", string.Empty)
                        @Bootstrap.LinkButton("/EvernoteUser/Details/" + item.Id, "info", "btn-sm", "Details", "search", string.Empty)
                        @Bootstrap.LinkButton("/EvernoteUser/Delete/" + item.Id, "danger", "btn-sm", "Delete", "trash", string.Empty)

                    </td>
                </tr>

            }

        </table>
    </div>
</div>
