@using MyEvernote.Entities.ValueObjects
@model LoginViewModel
@{
    ViewBag.Title = "MyEvernote-Giriş Sayfası";
}
<style>
    .validation-summary-errors {
        border: 2px dotted #a94442;
        background-color: #d76663;
        border-radius: 8px;
    }

        .validation-summary-errors ul {
            list-style: none;
            padding: 10px;
            color: #fff;
        }
</style>
@using (Html.BeginForm())
{
    <body>
        <div id="login">

            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">GİRİŞ YAP</h3>
                                <hr /> <br />@Html.ValidationSummary(false) <br /><hr />
                                <div class="form-group">
                                    <label for="username" class="text-info"><span class="glyphicon glyphicon-user"></span> Kullanıcı Adı</label><br>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info"><span class="glyphicon glyphicon-lock">  </span> Şifre</label><br>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info btn-sm">Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}

<script>
    $(function () {
        $("footer").parent().hide();
    });

</script>
