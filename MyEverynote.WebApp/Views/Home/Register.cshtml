@using MyEvernote.Entities.ValueObjects
@model RegisterViewModel
@{
    ViewBag.Title = "MyEvernote-Kayıt Sayfası";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <body>
        <div id="login">

            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">KAYIT OL</h3>
                                <hr /> <br />@Html.ValidationSummary(false) <br /><hr />
                                <div class="form-group">
                                    <label for="username" class="text-info"><span class="fa fa-user"></span> Kullanıcı Adı</label><br>
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="username" class="text-info"><span class="fa fa-envelope"></span> E-mail</label><br>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info"><span class="fa fa-lock">  </span> Şifre</label><br>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info"><span class="fa fa-lock">  </span> Şifre (Tekrar)</label><br>
                                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", type = "password" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info btn-sm">Kayıt ol</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}

