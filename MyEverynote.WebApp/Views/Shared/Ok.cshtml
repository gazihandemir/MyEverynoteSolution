@model MyEverynote.WebApp.ViewModels.OkViewModel
@{
    ViewBag.Title = Model.Title;
}
<style>
    .validation-summary-errors {
        border: 2px dotted #a94442;
        background-color: #d76663;
        border-radius: 8px;
    }

        .validation-summary-errors ul {
            list-style: none;
            padding: 10px;
            color: #fff;
        }
</style>
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <br /><br /><br /> <h1 class="text-center">@Model.Header </h1> <br /><br /><br />
                </div>
                <div class="main-content">
                    <div class="text-success">
                        <h2 class="text-center"><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                        <hr />
                        <p class="text-justify">
                            <h3 class="text-center">
                                @foreach (string msg in Model.Items)
                                {
                                    @msg<br>
                                }
                            </h3>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@{ 
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js =" setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }," +
                    " " + Model.RedirectingTimeout + ");";
    }
}
<script>
    $(function () {
        $("footer").parent().hide(); // Sayfa açılınca footer gözükmesin
       // setTimeout(function () { window.location = "/Home/Index"; }, 10000);
        @Html.Raw(js); // stringi herşeyiyle ekle tırnak vb ... 
    });

</script>
