
@using MyEvernote.Entities
@model Note

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-right">
        <span class="fa fa-user"></span> @Model.Owner.UserName <br />
        <span class="fa fa-time"></span> @Model.Owner.ModifiedOn <br />
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>
