@model MyEvernote.Entities.Category

@{
    ViewBag.Title = "Kategori Sil";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="row pl-5 pt-3 mr-0">
    <div class="col-md-12">
        <p class="display-4 border-bottom">
            @ViewBag.Title
           
        </p>
    </div>
</div>
<div class="row pl-3 mr-0">
    <div class="col-md-10">
        <div>
            <dl class="row">

                <dt class="col-md-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>


                <dt class="col-md-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-md-3">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>


                <dt class="col-md-3">
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </dt>

                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.ModifiedOn)
                </dd>


                <dt class="col-md-3">
                    @Html.DisplayNameFor(model => model.ModifiedUserName)
                </dt>

                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.ModifiedUserName)
                </dd>

            </dl>
            <div class="col-md-10 pl-1 text-left">
                <h3><b>Silmek istediğinize Emin misiniz ? </b></h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Bootstrap.LinkButton("/Category/Index", "secondary", string.Empty,
            string.Empty, "arrow-left", "Geri Dön!")
                        @Bootstrap.Button("danger", string.Empty, "submit", "trash", "Sil")

                    </div>
                }
            </div>
            </div>

        </div>
</div>

